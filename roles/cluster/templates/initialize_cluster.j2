#!/bin/bash

host_string="{% for host in groups['all'] %} cluster meet {{ hostvars[host]['inventory_hostname'] }} {{ redis_port[0] }} \n {% endfor %} {% for host in groups['all'] %} cluster meet {{ hostvars[host]['inventory_hostname'] }} {{ redis_port[1] }} \n {% endfor %}"

master_node_id_array=(`redis-cli cluster nodes | grep {{ redis_port[0] }} | awk '{print $1}'`)
{% raw %}
if [ ${#master_node_id_array[@]} -lt 1 ]
{% endraw %}
then
echo -e $host_string | /root/test-ansible/redis/bin/redis-cli -p 6379
fi

redis-cli -h 192.168.2.111 -p 6379 cluster addslots {0..5461}
redis-cli -h 192.168.2.112 -p 6379 cluster addslots {5462..10922}
redis-cli -h 192.168.2.113 -p 6379 cluster addslots {10923..16383}

slave_node_ip_array=(`redis-cli cluster nodes | grep 6380 | awk '{print $2}' | cut -d ":" -f 1`)
master_node_ip_array=(`redis-cli cluster nodes | grep 6379 | awk '{print $2}' | cut -d ":" -f 1`)

{% raw %}
for((i=0;i<${#master_node_ip_array[@]};i++))
{% endraw %}
do
  if [ ${slave_node_ip_array[`expr $i + 1`]} ]
  then
    redis-cli -h ${slave_node_ip_array[`expr $i + 1`]} -p 6380 cluster replicate ${master_node_id_array[$i]}
  else
    redis-cli -h ${slave_node_ip_array[0]} -p 6380 cluster replicate ${master_node_id_array[$i]}
  fi
done


